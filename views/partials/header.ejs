<!-- views/partials/header.ejs -->

<!-- Navigation Bar -->
<nav class="navbar-modern">
    <div class="navbar-modern-container">
        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-brand-modern">
            PanneauRAM
        </a>
        <ul class="navbar-menu">
            <li class="navbar-menu-item">
                <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-menu-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>"> RAM</a>
            </li>
            <li class="navbar-menu-item">
                <a href="/granulaires?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-menu-link <%= typeof currentPage !== 'undefined' && currentPage === 'granulaires' ? 'active' : '' %>"> Granudoseur</a>
            </li>
            <% if (niveau !== '0') { %>
            <li class="navbar-menu-item">
                <a href="/camera?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-menu-link <%= typeof currentPage !== 'undefined' && currentPage === 'camera' ? 'active' : '' %>"> Caméra</a>
            </li>
            <% } %>
            <% if (niveau === '3') { %>
            <li class="navbar-menu-item">
                <a href="/journal?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-menu-link <%= typeof currentPage !== 'undefined' && currentPage === 'journal' ? 'active' : '' %>"> Journal</a>
            </li>
            <% } %>
            <% if (niveau >= '2') { %>
            <li class="navbar-menu-item">
                <a href="/alertes?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-menu-link <%= typeof currentPage !== 'undefined' && currentPage === 'alertes' ? 'active' : '' %>"> Alertes</a>
            </li>
            <% } %>
            <% if (niveau === '3') { %>
            <li class="navbar-menu-item">
                <a href="/profils?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="navbar-menu-link <%= typeof currentPage !== 'undefined' && currentPage === 'profils' ? 'active' : '' %>"> Profils</a>
            </li>
            <% } %>
        </ul>
        <div class="navbar-right">
            <div class="navbar-user">
                <span id="connection-status" class="navbar-badge" style="background-color: #ef4444;">Hors ligne</span>
                <span style="margin-left: 8px;">
                    <strong><%= user %></strong> • <%= typeAcces %> (L<%= niveau %>)
                    <% if (niveau === '0') { %>
                    <span style="display: inline-block; margin-left: 8px; background: #0dcaf0; color: white; padding: 4px 8px; border-radius: 4px; font-size: 11px; font-weight: 600;"> R/O</span>
                    <% } %>
                </span>
            </div>
            <a href="/" class="navbar-logout">Déconnexion</a>
        </div>
    </div>
</nav>
