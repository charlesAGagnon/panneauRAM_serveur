<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-primary to-primary bg-clip-text text-transparent">
                                Raspberry Pi 1 - Balance
                            </h1>
                            <p class="text-gray-600 mt-2">Connecté en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex gap-3">
                            <div class="badge badge-lg">Niveau <%= niveau %></div>
                            <div id="connection-status" class="badge badge-lg">
                                <span class="loading loading-dots loading-xs"></span> Connexion...
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Données MQTT en temps réel -->
            <div class="card bg-base-100 shadow-2xl mb-6">
                <div class="card-body">
                    <h2 class="card-title text-2xl mb-4">Données MQTT en temps réel</h2>
                    <div id="mqtt-data-container" class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <!-- Les données MQTT seront ajoutées ici dynamiquement -->
                    </div>
                </div>
            </div>

            <!-- ...description card removed... -->

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline gap-2">Retour au dashboard</a>
                        <a href="/" class="btn btn-outline gap-2">Déconnexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Rejoindre la room pi1
        socket.emit('join-pi1');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span class="text-success">● Connecté</span>';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });

        socket.on('disconnect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span class="text-error">● Déconnecté</span>';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les données initiales
        socket.on('mqtt-initial-data-pi1', (data) =>
        {
            console.log('Pi 1 - Données initiales:', data);
            updateAllData(data);
        });

        // Recevoir les mises à jour en temps réel
        socket.on('mqtt-data-pi1', (data) =>
        {
            console.log('Pi 1 - Mise à jour:', data);
            updateValue(data.key, data.value, data.timestamp);
        });

        // Fonction pour mettre à jour toutes les données
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';

            if (Object.keys(data).length === 0)
            {
                container.innerHTML = '<div class="col-span-full alert alert-info"><span>Aucune donnée MQTT disponible. Ajoutez des topics dans models/mqtt1.js</span></div>';
                return;
            }

            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour créer une carte de données
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById('data-' + key);

            // Formater la valeur selon le type
            let displayValue = value;
            let displayTitle = key;

            if (key === 'poids')
            {
                displayTitle = 'Poids';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
            }
            else if (key === 'tare')
            {
                displayTitle = 'Tare';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
            }
            else if (key === 'unite')
            {
                displayTitle = 'Unité';
                displayValue = value.toUpperCase();
            }

            if (!card)
            {
                card = document.createElement('div');
                card.id = 'data-' + key;
                card.className = 'stat rounded-lg';
                card.innerHTML = `
                    <div class="stat-title">${displayTitle}</div>
                    <div class="stat-value text-2xl" id="value-${key}">${displayValue}</div>
                    <div class="stat-desc" id="time-${key}">${timestamp ? new Date(timestamp).toLocaleTimeString() : 'En attente...'}</div>
                `;
                container.appendChild(card);
            }
            else
            {
                document.getElementById('value-' + key).textContent = displayValue;
                if (timestamp)
                {
                    document.getElementById('time-' + key).textContent = new Date(timestamp).toLocaleTimeString();
                }
            }
        }

        // Fonction pour mettre à jour une valeur
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

    </script>
</body>
</html>
