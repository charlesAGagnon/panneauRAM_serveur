<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>404 - Page Introuvable</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,400,700" rel="stylesheet">

    <!-- CSS -->
    <style>
        html,
        body {
            font-family: 'Roboto Mono', monospace;
            font-size: 16px;
            user-select: none;
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            background-color: #000;
            overflow: hidden;
        }

        *,
        *:before,
        *:after {
            box-sizing: inherit;
        }

        .center-xy {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .container {
            width: 100%;
            height: 100vh;
            position: relative;
        }

        .terminal-container {
            text-align: left;
            position: relative;
            max-width: 700px;
            width: 90%;
        }

        .terminal-header {
            color: #00ff00;
            font-size: 14px;
            margin-bottom: 20px;
            opacity: 0.7;
        }

        .error-code {
            color: #ff3333;
            font-size: 72px;
            font-weight: 700;
            margin: 0 0 20px 0;
            letter-spacing: 4px;
        }

        .error-message {
            color: #fff;
            font-size: 24px;
            letter-spacing: 0.5px;
            margin: 0 0 15px 0;
            line-height: 1.5;
        }

        .error-details {
            color: #888;
            font-size: 16px;
            margin: 0 0 30px 0;
            line-height: 1.6;
        }

        .command-line {
            color: #00ff00;
            font-size: 18px;
            margin-top: 30px;
        }

        .command-prompt {
            color: #00ff00;
        }

        .command-text {
            color: #fff;
            display: inline-block;
        }

        .handle {
            background: #ffe500;
            width: 12px;
            height: 22px;
            display: inline-block;
            position: relative;
            animation: blink 0.8s infinite;
            margin-left: 2px;
        }

        @keyframes blink {

            0%,
            49% {
                opacity: 1;
            }

            50%,
            100% {
                opacity: 0;
            }
        }

        .btn-home {
            display: inline-block;
            margin-top: 40px;
            padding: 12px 24px;
            background: transparent;
            border: 2px solid #00ff00;
            color: #00ff00;
            text-decoration: none;
            font-family: 'Roboto Mono', monospace;
            font-size: 14px;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
        }

        .btn-home:hover {
            background: #00ff00;
            color: #000;
            box-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
        }

        #cb-replay {
            fill: #00ff00;
            width: 24px;
            position: absolute;
            right: 20px;
            bottom: 20px;
            cursor: pointer;
            opacity: 0.6;
            transition: all 0.3s ease;
        }

        #cb-replay:hover {
            opacity: 1;
            filter: drop-shadow(0 0 8px rgba(0, 255, 0, 0.8));
        }

        .grid-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                linear-gradient(rgba(0, 255, 0, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 0, 0.03) 1px, transparent 1px);
            background-size: 50px 50px;
            z-index: -1;
        }

        .glitch {
            position: relative;
        }

        @keyframes glitch {
            0% {
                text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75),
                    -0.05em -0.025em 0 rgba(0, 255, 0, 0.75),
                    -0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
            }

            14% {
                text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75),
                    -0.05em -0.025em 0 rgba(0, 255, 0, 0.75),
                    -0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
            }

            15% {
                text-shadow: -0.05em -0.025em 0 rgba(255, 0, 0, 0.75),
                    0.025em 0.025em 0 rgba(0, 255, 0, 0.75),
                    -0.05em -0.05em 0 rgba(0, 0, 255, 0.75);
            }

            49% {
                text-shadow: -0.05em -0.025em 0 rgba(255, 0, 0, 0.75),
                    0.025em 0.025em 0 rgba(0, 255, 0, 0.75),
                    -0.05em -0.05em 0 rgba(0, 0, 255, 0.75);
            }

            50% {
                text-shadow: 0.025em 0.05em 0 rgba(255, 0, 0, 0.75),
                    0.05em 0 0 rgba(0, 255, 0, 0.75),
                    0 -0.05em 0 rgba(0, 0, 255, 0.75);
            }

            99% {
                text-shadow: 0.025em 0.05em 0 rgba(255, 0, 0, 0.75),
                    0.05em 0 0 rgba(0, 255, 0, 0.75),
                    0 -0.05em 0 rgba(0, 0, 255, 0.75);
            }

            100% {
                text-shadow: -0.025em 0 0 rgba(255, 0, 0, 0.75),
                    -0.025em -0.025em 0 rgba(0, 255, 0, 0.75),
                    -0.025em -0.05em 0 rgba(0, 0, 255, 0.75);
            }
        }

        .error-code.glitch {
            animation: glitch 0.5s cubic-bezier(.25, .46, .45, .94) both 1;
            animation-delay: 1.5s;
        }

    </style>
</head>
<body>

    <div class="grid-background"></div>

    <div class="container">
        <div class="terminal-container center-xy">
            <div class="terminal-header">panneauRAM@system:~$</div>
            <div class="error-code glitch">404</div>
            <div class="error-message" id="message"></div>
            <div class="error-details" id="details"></div>
            <div class="command-line">
                <span class="command-prompt">&gt;&gt;</span>
                <span class="command-text" id="command"></span>
                <span class="handle"></span>
            </div>
            <a href="/" class="btn-home" id="homeBtn" style="opacity: 0;">[ Retour à l'accueil ]</a>
        </div>
    </div>

    <!-- Replay Icon -->
    <svg id="cb-replay" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 279.9 297.3">
        <path d="M269.4,162.6c-2.7,66.5-55.6,120.1-121.8,123.9c-77,4.4-141.3-60-136.8-136.9C14.7,81.7,71,27.8,140,27.8
        c1.8,0,3.5,0,5.3,0.1c0.3,0,0.5,0.2,0.5,0.5v15c0,1.5,1.6,2.4,2.9,1.7l35.9-20.7c1.3-0.7,1.3-2.6,0-3.3L148.6,0.3
        c-1.3-0.7-2.9,0.2-2.9,1.7v15c0,0.3-0.2,0.5-0.5,0.5c-1.7-0.1-3.5-0.1-5.2-0.1C63.3,17.3,1,78.9,0,155.4
        C-1,233.8,63.4,298.3,141.9,297.3c74.6-1,135.1-60.2,138-134.3c0.1-3-2.3-5.4-5.3-5.4
        C271.8,157.6,269.5,159.8,269.4,162.6z" />
    </svg>

    <!-- JavaScript -->
    <script>
        const messages = {
            message: "ERREUR : Page introuvable",
            details: "La page que vous recherchez n'existe pas ou a été déplacée.",
            command: "redirecting_to_home..."
        };

        let messageIndex = 0;
        let detailsIndex = 0;
        let commandIndex = 0;
        let isAnimating = false;

        function typeWriter(element, text, index, callback, speed = 50)
        {
            if (index < text.length)
            {
                element.textContent += text.charAt(index);
                setTimeout(() => typeWriter(element, text, index + 1, callback, speed), speed);
            }
            else if (callback)
            {
                setTimeout(callback, 300);
            }
        }

        function startAnimation()
        {
            if (isAnimating) return;
            isAnimating = true;

            const messageEl = document.getElementById('message');
            const detailsEl = document.getElementById('details');
            const commandEl = document.getElementById('command');
            const homeBtn = document.getElementById('homeBtn');

            // Reset
            messageEl.textContent = '';
            detailsEl.textContent = '';
            commandEl.textContent = '';
            homeBtn.style.opacity = '0';

            // Séquence d'animation
            setTimeout(() =>
            {
                typeWriter(messageEl, messages.message, 0, () =>
                {
                    typeWriter(detailsEl, messages.details, 0, () =>
                    {
                        typeWriter(commandEl, messages.command, 0, () =>
                        {
                            setTimeout(() =>
                            {
                                homeBtn.style.transition = 'opacity 0.5s ease';
                                homeBtn.style.opacity = '1';
                                isAnimating = false;
                            }, 500);
                        }, 80);
                    }, 30);
                }, 60);
            }, 500);
        }

        // Démarrage automatique
        window.addEventListener('load', startAnimation);

        // Replay
        document.getElementById('cb-replay').addEventListener('click', () =>
        {
            if (!isAnimating)
            {
                startAnimation();
            }
        });

    </script>

</body>
</html>
