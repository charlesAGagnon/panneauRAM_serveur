<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4 border-secondary">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-secondary to-purple-600 bg-clip-text text-transparent">
                                Raspberry Pi 4 - Aspirateur üå™Ô∏è
                            </h1>
                            <p class="text-gray-600 mt-2">Connect√© en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex gap-3">
                            <div class="badge badge-secondary badge-lg">Niveau <%= niveau %></div>
                            <div id="connection-status" class="badge badge-ghost badge-lg">
                                <span class="loading loading-dots loading-xs"></span> Connexion...
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Grid Layout -->
            <div class="grid lg:grid-cols-2 gap-6">
                <!-- Left Column: Status Display -->
                <div class="card bg-base-100 shadow-2xl">
                    <div class="card-body">
                        <h2 class="card-title text-2xl mb-4">üìä √âtat du Syst√®me en temps r√©el</h2>
                        <div id="mqtt-data-container" class="grid grid-cols-1 gap-4">
                            <!-- Les donn√©es MQTT seront ajout√©es ici dynamiquement -->
                        </div>
                    </div>
                </div>

                <!-- Right Column: Controls -->
                <div class="space-y-6">
                    <% if (typeof canWrite !== 'undefined' && canWrite) { %>
                    <!-- Force Control -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">üéÆ Contr√¥le de Force</h2>

                            <div class="mb-4">
                                <label class="font-semibold mb-2 block">Forcer le cycle</label>
                                <div class="flex gap-2">
                                    <button id="force-go" class="btn btn-success flex-1">GO</button>
                                    <button id="force-stop" class="btn btn-error flex-1">STOP</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                    <!-- Read-Only Notice -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">üëÅÔ∏è Mode Lecture Seule</h2>
                            <div class="alert alert-info">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Vous √™tes en mode consultation. Les contr√¥les sont d√©sactiv√©s pour votre niveau d'acc√®s.</span>
                            </div>
                        </div>
                    </div>
                    <% } %>

                    <!-- Description Card -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">‚ÑπÔ∏è Description</h2>
                            <p class="text-gray-700">
                                Le Raspberry Pi 4 g√®re le syst√®me d'aspiration. Il surveille les niveaux des trois bacs (A, B, C)
                                et contr√¥le la s√©quence d'aspiration.<% if (typeof canWrite !== 'undefined' && canWrite) { %> Les boutons GO et STOP permettent de forcer le d√©marrage ou l'arr√™t du cycle.<% } %>
                            </p>
                            <div class="alert alert-secondary mt-4">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Fonction: Aspirateur - Surveillance des niveaux<% if (typeof canWrite !== 'undefined' && canWrite) { %> + Contr√¥le de force (GO/STOP)<% } %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl mt-6">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline btn-secondary gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                            Retour au dashboard
                        </a>
                        <a href="/" class="btn btn-outline btn-error gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                            D√©connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Rejoindre la room pi4
        socket.emit('join-pi4');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span class="text-success">‚óè Connect√©</span>';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });

        socket.on('disconnect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span class="text-error">‚óè D√©connect√©</span>';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les donn√©es initiales
        socket.on('mqtt-initial-data-pi4', (data) =>
        {
            console.log('Pi 4 - Donn√©es initiales:', data);
            updateAllData(data);
        });

        // Recevoir les mises √† jour en temps r√©el
        socket.on('mqtt-data-pi4', (data) =>
        {
            console.log('Pi 4 - Mise √† jour:', data);
            updateValue(data.key, data.value, data.timestamp);
        });

        // G√©rer les erreurs
        socket.on('mqtt-error-pi4', (error) =>
        {
            console.error('Pi 4 - Erreur:', error);
            alert('Erreur MQTT: ' + error.message);
        });

        // Fonction pour mettre √† jour toutes les donn√©es
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';

            if (Object.keys(data).length === 0)
            {
                container.innerHTML = '<div class="alert alert-info"><span>Aucune donn√©e MQTT disponible</span></div>';
                return;
            }

            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour cr√©er/mettre √† jour une carte de donn√©es
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById('data-' + key);

            // Formater la valeur selon le type
            let displayValue = value;
            let displayTitle = key;
            let badgeClass = 'badge badge-lg badge-secondary';
            let displayUnit = '';

            if (key === 'sequence')
            {
                displayTitle = 'S√©quence';
                badgeClass = value === 'FINISHED' ? 'badge badge-lg badge-success' : 'badge badge-lg badge-warning';
            }
            else if (key === 'NivA')
            {
                displayTitle = 'Niveau Bac A';
                displayValue = value + '%';
                displayUnit = '';
                badgeClass = value < 30 ? 'badge badge-lg badge-error' : (value < 70 ? 'badge badge-lg badge-warning' : 'badge badge-lg badge-success');
            }
            else if (key === 'NivB')
            {
                displayTitle = 'Niveau Bac B';
                displayValue = value + '%';
                displayUnit = '';
                badgeClass = value < 30 ? 'badge badge-lg badge-error' : (value < 70 ? 'badge badge-lg badge-warning' : 'badge badge-lg badge-success');
            }
            else if (key === 'NivC')
            {
                displayTitle = 'Niveau Bac C';
                displayValue = value + '%';
                displayUnit = '';
                badgeClass = value < 30 ? 'badge badge-lg badge-error' : (value < 70 ? 'badge badge-lg badge-warning' : 'badge badge-lg badge-success');
            }

            if (!card)
            {
                card = document.createElement('div');
                card.id = 'data-' + key;
                card.className = 'stat bg-secondary/10 rounded-lg';
                card.innerHTML = `
                    <div class="stat-title">${displayTitle}</div>
                    <div class="stat-value">
                        <span class="${badgeClass}" id="value-${key}">${displayValue}</span>
                    </div>
                    <div class="stat-desc" id="time-${key}">${timestamp ? new Date(timestamp).toLocaleTimeString() : 'En attente...'}</div>
                `;
                container.appendChild(card);
            }
            else
            {
                const valueElement = document.getElementById('value-' + key);
                valueElement.textContent = displayValue;

                // Mettre √† jour la classe du badge selon la valeur
                if (key === 'sequence')
                {
                    valueElement.className = value === 'FINISHED' ? 'badge badge-lg badge-success' : 'badge badge-lg badge-warning';
                }
                else if (key === 'NivA' || key === 'NivB' || key === 'NivC')
                {
                    const numValue = parseInt(value);
                    valueElement.className = numValue < 30 ? 'badge badge-lg badge-error' : (numValue < 70 ? 'badge badge-lg badge-warning' : 'badge badge-lg badge-success');
                }

                if (timestamp)
                {
                    document.getElementById('time-' + key).textContent = new Date(timestamp).toLocaleTimeString();
                }
            }
        }

        // Fonction pour mettre √† jour une valeur
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

        // Gestionnaires de boutons - Force GO
        document.getElementById('force-go').addEventListener('click', () =>
        {
            console.log('Force GO clicked');
            socket.emit('mqtt-command-pi4-force',
            {
                value: 'GO'
            });
        });

        // Gestionnaires de boutons - Force STOP
        document.getElementById('force-stop').addEventListener('click', () =>
        {
            console.log('Force STOP clicked');
            socket.emit('mqtt-command-pi4-force',
            {
                value: 'STOP'
            });
        });

    </script>
</body>
</html>
