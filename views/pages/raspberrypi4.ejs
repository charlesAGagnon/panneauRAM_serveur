<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-primary to-primary bg-clip-text text-transparent">
                                Raspberry Pi 4 - Aspirateur
                            </h1>
                            <p class="text-gray-600 mt-2">Connecté en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex gap-3">
                            <div class="badge badge-lg">Niveau <%= niveau %></div>
                            <div id="connection-status" class="badge badge-lg">
                                <span class="loading loading-dots loading-xs"></span> Connexion...
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Grid Layout -->
            <div class="grid lg:grid-cols-2 gap-6">
                <!-- Left Column: Status Display -->
                <div class="card bg-base-100 shadow-2xl">
                    <div class="card-body">
                        <h2 class="card-title text-2xl mb-4">État du Système en temps réel</h2>
                        <div id="mqtt-data-container" class="grid grid-cols-1 gap-4">
                            <!-- Les données MQTT seront ajoutées ici dynamiquement -->
                        </div>
                    </div>
                </div>

                <!-- Right Column: Controls -->
                <div class="space-y-6">
                    <% if (typeof canWrite !== 'undefined' && canWrite) { %>
                    <!-- Force Control -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">Contrôle de Force</h2>

                            <div class="mb-4">
                                <label class="font-semibold mb-2 block">Forcer le cycle</label>
                                <div class="flex gap-2">
                                    <button id="force-go" class="btn btn-outline flex-1">GO</button>
                                    <button id="force-stop" class="btn btn-outline flex-1">STOP</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                    <!-- Read-Only Notice -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">Mode Lecture Seule</h2>
                            <div class="alert">Vous êtes en mode consultation. Les contrôles sont désactivés pour votre niveau d'accès.</div>
                        </div>
                    </div>
                    <% } %>

                    <!-- ...description card removed... -->
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl mt-6">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline gap-2">Retour au dashboard</a>
                        <a href="/" class="btn btn-outline gap-2">Déconnexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const socket = io();
        // Rejoindre la room pi4
        socket.emit('join-pi4');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span style="color: #22c55e; font-size: 1.2em;">●</span> Connecté';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });
        socket.on('disconnect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span style="color: #ef4444; font-size: 1.2em;">●</span> Déconnecté';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les données initiales
        socket.on('mqtt-initial-data-pi4', (data) =>
        {
            console.log('Pi 4 - Données initiales:', data);
            updateAllData(data);
        });
        // Recevoir les mises à jour en temps réel
        socket.on('mqtt-data-pi4', (data) =>
        {
            console.log('Pi 4 - Mise à jour:', data);
            updateValue(data.key, data.value, data.timestamp);
        });
        // Gérer les erreurs
        socket.on('mqtt-error-pi4', (error) =>
        {
            console.error('Pi 4 - Erreur:', error);
            alert('Erreur MQTT: ' + error.message);
        });

        // Fonction pour mettre à jour toutes les données
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';
            if (Object.keys(data).length === 0)
            {
                container.innerHTML = '<div class="alert">Aucune donnée MQTT disponible</div>';
                return;
            }
            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour créer/mettre à jour une carte de données
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById('data-' + key);
            // Formater la valeur selon le type
            let displayValue = value;
            let displayTitle = key;
            let badgeClass = 'badge badge-lg';
            let displayUnit = '';
            if (key === 'sequence')
            {
                displayTitle = 'Séquence';
                badgeClass = 'badge badge-lg';
            }
            else if (key === 'NivA')
            {
                displayTitle = 'Niveau Bac A';
                displayValue = value + '%';
                displayUnit = '';
                badgeClass = 'badge badge-lg';
            }
            else if (key === 'NivB')
            {
                displayTitle = 'Niveau Bac B';
                displayValue = value + '%';
                displayUnit = '';
                badgeClass = value < 30 ? 'badge badge-lg badge-error' : (value < 70 ? 'badge badge-lg badge-warning' : 'badge badge-lg badge-success');
            }
            else if (key === 'NivC')
            {
                displayTitle = 'Niveau Bac C';
                displayValue = value + '%';
                displayUnit = '';
                badgeClass = value < 30 ? 'badge badge-lg badge-error' : (value < 70 ? 'badge badge-lg badge-warning' : 'badge badge-lg badge-success');
            }
            if (!card)
            {
                card = document.createElement('div');
                card.id = 'data-' + key;
                card.className = 'stat rounded-lg';
                card.innerHTML = `
                <div class="stat-title">${displayTitle}</div>
                <div id="value-${key}" class="${badgeClass}">${displayValue}</div>
                <div class="stat-desc" id="time-${key}">${timestamp ? new Date(timestamp).toLocaleTimeString() : 'En attente...'}</div>
            `;
                container.appendChild(card);
            }
            else
            {
                const valueElement = document.getElementById('value-' + key);
                valueElement.textContent = displayValue;
                // Mettre à jour la classe du badge selon la valeur
                if (key === 'sequence')
                {
                    valueElement.className = 'badge badge-lg';
                }
                else if (key === 'NivA' || key === 'NivB' || key === 'NivC')
                {
                    const numValue = parseInt(value);
                    valueElement.className = 'badge badge-lg';
                }
                if (timestamp)
                {
                    document.getElementById('time-' + key).textContent = new Date(timestamp).toLocaleTimeString();
                }
            }
        }

        // Fonction pour mettre à jour une valeur
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

        // Gestionnaires de boutons - Force GO
        document.getElementById('force-go').addEventListener('click', () =>
        {
            console.log('Force GO clicked');
            socket.emit('mqtt-command-pi4-force',
            {
                value: 'GO'
            });
        });
        // Gestionnaires de boutons - Force STOP
        document.getElementById('force-stop').addEventListener('click', () =>
        {
            console.log('Force STOP clicked');
            socket.emit('mqtt-command-pi4-force',
            {
                value: 'STOP'
            });
        });

    </script>
</body>
</html>
