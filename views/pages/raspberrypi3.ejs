<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4 border-warning">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-warning to-orange-600 bg-clip-text text-transparent">
                                Raspberry Pi 3 - Power Meter ‚ö°
                            </h1>
                            <p class="text-gray-600 mt-2">Connect√© en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex gap-3">
                            <div class="badge badge-warning badge-lg">Niveau <%= niveau %></div>
                            <div id="connection-status" class="badge badge-ghost badge-lg">
                                <span class="loading loading-dots loading-xs"></span> Connexion...
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Donn√©es MQTT en temps r√©el -->
            <div class="card bg-base-100 shadow-2xl mb-6">
                <div class="card-body">
                    <h2 class="card-title text-2xl mb-4">üìä Donn√©es MQTT en temps r√©el</h2>
                    <div id="mqtt-data-container" class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
                        <!-- Les donn√©es MQTT seront ajout√©es ici dynamiquement -->
                    </div>
                </div>
            </div>

            <!-- Description Card -->
            <div class="card bg-base-100 shadow-2xl mb-6">
                <div class="card-body">
                    <h2 class="card-title text-2xl mb-4">‚ÑπÔ∏è Description</h2>
                    <p class="text-gray-700">
                        Le Raspberry Pi 3 g√®re le Power Meter du syst√®me. Il mesure les tensions (Van, Vbn, Vab),
                        les courants (Ia, Ib), la puissance active (KW), l'√©nergie consomm√©e (KWh) et le facteur de puissance (FP).
                    </p>
                    <div class="alert alert-warning mt-4">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Fonction: Power Meter - Lecture seule (tensions, courants, puissance, √©nergie, FP)</span>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline btn-secondary gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                            Retour au dashboard
                        </a>
                        <a href="/" class="btn btn-outline btn-error gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                            D√©connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Rejoindre la room pi3
        socket.emit('join-pi3');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span class="text-success">‚óè Connect√©</span>';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });

        socket.on('disconnect', () =>
        {
            document.getElementById('connection-status').innerHTML = '<span class="text-error">‚óè D√©connect√©</span>';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les donn√©es initiales
        socket.on('mqtt-initial-data-pi3', (data) =>
        {
            console.log('Pi 3 - Donn√©es initiales:', data);
            updateAllData(data);
        });

        // Recevoir les mises √† jour en temps r√©el
        socket.on('mqtt-data-pi3', (data) =>
        {
            console.log('Pi 3 - Mise √† jour:', data);
            updateValue(data.key, data.value, data.timestamp);
        });

        // Fonction pour mettre √† jour toutes les donn√©es
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';

            if (Object.keys(data).length === 0)
            {
                container.innerHTML = '<div class="col-span-full alert alert-warning"><span>Aucune donn√©e MQTT disponible. Ajoutez des topics dans models/mqtt3.js</span></div>';
                return;
            }

            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour cr√©er une carte de donn√©es
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById('data-' + key);

            // Formater la valeur selon le type
            let displayValue = value;
            let displayTitle = key;
            let displayUnit = '';
            let badgeClass = 'badge badge-lg badge-info';

            if (key === 'Van')
            {
                displayTitle = 'Tension AN';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' V';
                badgeClass = 'badge badge-lg badge-info';
            }
            else if (key === 'Vbn')
            {
                displayTitle = 'Tension BN';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' V';
                badgeClass = 'badge badge-lg badge-info';
            }
            else if (key === 'Vab')
            {
                displayTitle = 'Tension AB';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' V';
                badgeClass = 'badge badge-lg badge-info';
            }
            else if (key === 'Ia')
            {
                displayTitle = 'Courant A';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' A';
                badgeClass = 'badge badge-lg badge-accent';
            }
            else if (key === 'Ib')
            {
                displayTitle = 'Courant B';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' A';
                badgeClass = 'badge badge-lg badge-accent';
            }
            else if (key === 'KW')
            {
                displayTitle = 'Puissance Active';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' W';
                badgeClass = 'badge badge-lg badge-success';
            }
            else if (key === 'KWh')
            {
                displayTitle = '√ânergie Consomm√©e';
                displayValue = typeof value === 'number' ? value.toFixed(2) : value;
                displayUnit = ' Wh';
                badgeClass = 'badge badge-lg badge-primary';
            }
            else if (key === 'FP')
            {
                displayTitle = 'Facteur de Puissance';
                displayValue = typeof value === 'number' ? value.toFixed(1) : value;
                displayUnit = ' %';
                badgeClass = 'badge badge-lg badge-secondary';
            }

            if (!card)
            {
                card = document.createElement('div');
                card.id = 'data-' + key;
                card.className = 'stat bg-warning/10 rounded-lg';
                card.innerHTML = `
                    <div class="stat-title">${displayTitle}</div>
                    <div class="stat-value text-2xl">
                        <span class="${badgeClass}" id="value-${key}">${displayValue}${displayUnit}</span>
                    </div>
                    <div class="stat-desc" id="time-${key}">${timestamp ? new Date(timestamp).toLocaleTimeString() : 'En attente...'}</div>
                `;
                container.appendChild(card);
            }
            else
            {
                document.getElementById('value-' + key).textContent = displayValue + displayUnit;
                if (timestamp)
                {
                    document.getElementById('time-' + key).textContent = new Date(timestamp).toLocaleTimeString();
                }
            }
        }

        // Fonction pour mettre √† jour une valeur
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

    </script>
</body>
</html>
