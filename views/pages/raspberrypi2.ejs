<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4 border-success">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-success to-green-600 bg-clip-text text-transparent">
                                Raspberry Pi 2 - M√©langeur üîÄ
                            </h1>
                            <p class="text-gray-600 mt-2">Connect√© en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex gap-3">
                            <div class="badge badge-success badge-lg">Niveau <%= niveau %></div>
                            <div id="connection-status" class="badge badge-ghost badge-lg">
                                <span class="loading loading-dots loading-xs"></span> Connexion...
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Grid Layout -->
            <div class="grid lg:grid-cols-2 gap-6">
                <!-- Left Column: Status Display -->
                <div class="card bg-base-100 shadow-2xl">
                    <div class="card-body">
                        <h2 class="card-title text-2xl mb-4">üìä √âtat du Syst√®me en temps r√©el</h2>
                        <div id="mqtt-data-container" class="grid grid-cols-1 gap-4">
                            <!-- Les donn√©es MQTT seront ajout√©es ici dynamiquement -->
                        </div>
                    </div>
                </div>

                <!-- Right Column: Controls -->
                <div class="space-y-6">
                    <% if (typeof canWrite !== 'undefined' && canWrite) { %>
                    <!-- Motor Controls -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">üéÆ Contr√¥le des Moteurs</h2>

                            <!-- Motor A -->
                            <div class="mb-4">
                                <label class="font-semibold mb-2 block">Moteur A</label>
                                <div class="flex gap-2">
                                    <button id="motorA-on" class="btn btn-success flex-1">ON</button>
                                    <button id="motorA-off" class="btn btn-neutral flex-1">OFF</button>
                                </div>
                            </div>

                            <!-- Motor B -->
                            <div class="mb-4">
                                <label class="font-semibold mb-2 block">Moteur B</label>
                                <div class="flex gap-2">
                                    <button id="motorB-on" class="btn btn-success flex-1">ON</button>
                                    <button id="motorB-off" class="btn btn-neutral flex-1">OFF</button>
                                </div>
                            </div>

                            <!-- Motor C -->
                            <div class="mb-4">
                                <label class="font-semibold mb-2 block">Moteur C</label>
                                <div class="flex gap-2">
                                    <button id="motorC-on" class="btn btn-success flex-1">ON</button>
                                    <button id="motorC-off" class="btn btn-neutral flex-1">OFF</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mode Control -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">‚öôÔ∏è Mode de Fonctionnement</h2>
                            <div class="flex gap-2">
                                <button id="mode-manuel" class="btn btn-secondary flex-1">Manuel</button>
                                <button id="mode-auto" class="btn btn-accent flex-1">Auto</button>
                            </div>
                        </div>
                    </div>

                    <!-- Recipe Control -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">üìù Contr√¥le des Recettes</h2>

                            <!-- Recipe Input -->
                            <div class="mb-4">
                                <label class="font-semibold mb-2 block">Recette (Format: A-B-C en grammes)</label>
                                <div class="grid grid-cols-3 gap-2 mb-2">
                                    <input type="number" id="recipeA" placeholder="A" class="input input-bordered" min="0" value="0" />
                                    <input type="number" id="recipeB" placeholder="B" class="input input-bordered" min="0" value="0" />
                                    <input type="number" id="recipeC" placeholder="C" class="input input-bordered" min="0" value="0" />
                                </div>
                                <button id="sendRecipeBtn" class="btn btn-primary w-full">üì§ Envoyer la recette</button>
                            </div>

                            <!-- Recipe Execution -->
                            <div>
                                <label class="font-semibold mb-2 block">Ex√©cution</label>
                                <div class="grid grid-cols-3 gap-2">
                                    <button id="recetteGo-stop" class="btn btn-error">‚èπÔ∏è Stop</button>
                                    <button id="recetteGo-go" class="btn btn-success">‚ñ∂Ô∏è Go</button>
                                    <button id="recetteGo-flush" class="btn btn-warning">üîÑ Flush</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                    <!-- Read-Only Notice -->
                    <div class="card bg-base-100 shadow-2xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">üëÅÔ∏è Mode Lecture Seule</h2>
                            <div class="alert alert-info">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span>Vous √™tes en mode consultation. Les contr√¥les sont d√©sactiv√©s pour votre niveau d'acc√®s.</span>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl mt-6">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline btn-secondary gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                            Retour au dashboard
                        </a>
                        <a href="/" class="btn btn-outline btn-error gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                            D√©connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Rejoindre la room pi2
        socket.emit('join-pi2');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            console.log('‚úÖ Pi 2 - Connect√© au serveur Socket.IO');
            document.getElementById('connection-status').innerHTML = '<span class="text-success">‚óè Connect√©</span>';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });

        socket.on('disconnect', () =>
        {
            console.log('‚ùå Pi 2 - D√©connect√© du serveur Socket.IO');
            document.getElementById('connection-status').innerHTML = '<span class="text-error">‚óè D√©connect√©</span>';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les donn√©es initiales
        socket.on('mqtt-initial-data-pi2', (data) =>
        {
            console.log('Pi 2 - Donn√©es initiales:', data);
            updateAllData(data);
        });

        // Recevoir les mises √† jour en temps r√©el (ARCHITECTURE COMME PI 1)
        socket.on('mqtt-data-pi2', (data) =>
        {
            console.log('Pi 2 - Mise √† jour:', data);
            updateValue(data.key, data.value, data.timestamp);
        });

        // G√©rer les erreurs
        socket.on('mqtt-error-pi2', (error) =>
        {
            console.error('‚ùå Erreur MQTT:', error);
            alert('Erreur MQTT: ' + error.message);
        });

        // Fonction pour mettre √† jour toutes les donn√©es
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';

            if (Object.keys(data).length === 0)
            {
                container.innerHTML = '<div class="alert alert-info"><span>Aucune donn√©e MQTT disponible</span></div>';
                return;
            }

            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour cr√©er/mettre √† jour une carte de donn√©es
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById('data-' + key);

            // Formater la valeur selon le type
            let displayValue = value;
            let displayTitle = key;
            let badgeClass = 'badge badge-lg badge-neutral';

            if (key === 'recetteStatut')
            {
                displayTitle = 'Statut Recette';
                displayValue = value.toUpperCase();
                if (value === 'PROCESSING')
                {
                    badgeClass = 'badge badge-lg badge-warning';
                }
                else if (value === 'FINISHED')
                {
                    badgeClass = 'badge badge-lg badge-success';
                }
            }
            else if (key.startsWith('mot'))
            {
                displayTitle = 'Moteur ' + key.charAt(3).toUpperCase();
                displayValue = value.toUpperCase();
                if (value === 'on')
                {
                    badgeClass = 'badge badge-lg badge-success';
                }
                else
                {
                    badgeClass = 'badge badge-lg badge-neutral';
                }
            }

            if (!card)
            {
                card = document.createElement('div');
                card.id = 'data-' + key;
                card.className = 'stat bg-success/10 rounded-lg';
                card.innerHTML = `
                    <div class="stat-title">${displayTitle}</div>
                    <div class="stat-value">
                        <span class="${badgeClass}" id="value-${key}">${displayValue}</span>
                    </div>
                    <div class="stat-desc" id="time-${key}">${timestamp ? new Date(timestamp).toLocaleTimeString() : 'En attente...'}</div>
                `;
                container.appendChild(card);
            }
            else
            {
                const valueElement = document.getElementById('value-' + key);
                valueElement.textContent = displayValue;
                valueElement.className = badgeClass;

                if (timestamp)
                {
                    document.getElementById('time-' + key).textContent = new Date(timestamp).toLocaleTimeString();
                }
            }
        }

        // Fonction pour mettre √† jour une valeur (appel√©e par mqtt-data-pi2)
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

        // ==================== CONTR√îLES DES MOTEURS ====================

        // Moteur A
        document.getElementById('motorA-on').addEventListener('click', function()
        {
            console.log('Commande: Moteur A -> ON');
            socket.emit('mqtt-command-pi2-motor',
            {
                motor: 'motA',
                value: 'on'
            });
        });

        document.getElementById('motorA-off').addEventListener('click', function()
        {
            console.log('Commande: Moteur A -> OFF');
            socket.emit('mqtt-command-pi2-motor',
            {
                motor: 'motA',
                value: 'off'
            });
        });

        // Moteur B
        document.getElementById('motorB-on').addEventListener('click', function()
        {
            console.log('Commande: Moteur B -> ON');
            socket.emit('mqtt-command-pi2-motor',
            {
                motor: 'motB',
                value: 'on'
            });
        });

        document.getElementById('motorB-off').addEventListener('click', function()
        {
            console.log('Commande: Moteur B -> OFF');
            socket.emit('mqtt-command-pi2-motor',
            {
                motor: 'motB',
                value: 'off'
            });
        });

        // Moteur C
        document.getElementById('motorC-on').addEventListener('click', function()
        {
            console.log('Commande: Moteur C -> ON');
            socket.emit('mqtt-command-pi2-motor',
            {
                motor: 'motC',
                value: 'on'
            });
        });

        document.getElementById('motorC-off').addEventListener('click', function()
        {
            console.log('Commande: Moteur C -> OFF');
            socket.emit('mqtt-command-pi2-motor',
            {
                motor: 'motC',
                value: 'off'
            });
        });

        // ==================== CONTR√îLE DU MODE ====================

        document.getElementById('mode-manuel').addEventListener('click', function()
        {
            console.log('Commande: Mode -> manuel');
            socket.emit('mqtt-command-pi2-mode',
            {
                value: 'manuel'
            });
            this.classList.add('btn-active');
            document.getElementById('mode-auto').classList.remove('btn-active');
        });

        document.getElementById('mode-auto').addEventListener('click', function()
        {
            console.log('Commande: Mode -> auto');
            socket.emit('mqtt-command-pi2-mode',
            {
                value: 'auto'
            });
            this.classList.add('btn-active');
            document.getElementById('mode-manuel').classList.remove('btn-active');
        });

        // ==================== CONTR√îLE DES RECETTES ====================

        // Envoyer une recette
        document.getElementById('sendRecipeBtn').addEventListener('click', function()
        {
            const a = document.getElementById('recipeA').value || '0';
            const b = document.getElementById('recipeB').value || '0';
            const c = document.getElementById('recipeC').value || '0';

            const recipe = `${a}-${b}-${c}`;
            console.log('Commande: Recette -> ' + recipe);
            socket.emit('mqtt-command-pi2-recette',
            {
                value: recipe
            });

            // Feedback visuel
            this.classList.add('btn-disabled');
            const originalText = this.innerHTML;
            this.innerHTML = '‚úì Envoy√©!';
            setTimeout(() =>
            {
                this.classList.remove('btn-disabled');
                this.innerHTML = originalText;
            }, 2000);
        });

        // Ex√©cution recette - Stop
        document.getElementById('recetteGo-stop').addEventListener('click', function()
        {
            console.log('Commande: RecetteGo -> stop');
            socket.emit('mqtt-command-pi2-recetteGo',
            {
                value: 'stop'
            });
        });

        // Ex√©cution recette - Go
        document.getElementById('recetteGo-go').addEventListener('click', function()
        {
            console.log('Commande: RecetteGo -> go');
            socket.emit('mqtt-command-pi2-recetteGo',
            {
                value: 'go'
            });
        });

        // Ex√©cution recette - Flush
        document.getElementById('recetteGo-flush').addEventListener('click', function()
        {
            console.log('Commande: RecetteGo -> flush');
            socket.emit('mqtt-command-pi2-recetteGo',
            {
                value: 'flush'
            });
        });

    </script>
</body>
</html>
