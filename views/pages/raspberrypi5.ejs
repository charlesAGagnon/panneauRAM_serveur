<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4 border-accent">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-accent to-pink-600 bg-clip-text text-transparent">
                                Raspberry Pi 5 - Valves
                            </h1>
                            <p class="text-gray-600 mt-2">Connect√© en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex items-center gap-3">
                            <span id="connection-status" class="badge badge-lg loading loading-spinner">Connexion...</span>
                            <div class="badge badge-accent badge-lg">
                                Niveau <%= niveau %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Display Card -->
            <div class="card bg-base-100 shadow-2xl mb-6">
                <div class="card-body">
                    <h2 class="card-title text-2xl mb-4">
                        üìä Donn√©es en temps r√©el
                        <span class="loading loading-dots loading-sm ml-2"></span>
                    </h2>
                    <div id="mqtt-data-container" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Les donn√©es seront ins√©r√©es ici dynamiquement -->
                    </div>
                </div>
            </div>

            <!-- Description Card -->
            <div class="card bg-base-100 shadow-2xl mb-6">
                <div class="card-body">
                    <h2 class="card-title text-2xl mb-4">‚ÑπÔ∏è Description</h2>
                    <p class="text-gray-700">
                        Le Raspberry Pi 5 surveille l'ouverture des valves du syst√®me. Les valeurs repr√©sentent le pourcentage d'ouverture
                        de chaque valve (0% = ferm√©e, 100% = ouverte compl√®tement).
                    </p>
                    <div class="alert alert-info mt-4">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span>Syst√®me en lecture seule - Surveillance uniquement</span>
                    </div>
                </div>
            </div>

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline btn-secondary gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
                            Retour au dashboard
                        </a>
                        <a href="/" class="btn btn-outline btn-error gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
                            D√©connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Rejoindre la room pi5
        socket.emit('join-pi5');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            console.log('Connect√© au serveur Socket.IO');
            document.getElementById('connection-status').textContent = 'Connect√©';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });

        socket.on('disconnect', () =>
        {
            console.log('D√©connect√© du serveur Socket.IO');
            document.getElementById('connection-status').textContent = 'D√©connect√©';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les donn√©es initiales
        socket.on('mqtt-initial-data-pi5', (data) =>
        {
            console.log('Donn√©es initiales Pi 5:', data);
            updateAllData(data);
        });

        // Recevoir les mises √† jour en temps r√©el
        socket.on('mqtt-data-pi5', (data) =>
        {
            console.log('Mise √† jour Pi 5:', data);
            updateValue(data.key, data.value, data.timestamp);
        });

        // Fonction pour mettre √† jour toutes les donn√©es
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';

            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour cr√©er une carte de donn√©es
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById(`data-card-${key}`);

            // Formater le nom d'affichage
            let displayName = key;
            if (key === 'Ouverture_PB') displayName = 'Ouverture PB';
            if (key === 'Ouverture_GB') displayName = 'Ouverture GB';

            // D√©terminer la couleur du badge selon le pourcentage
            let badgeClass = 'badge-error'; // Rouge par d√©faut (ferm√©e)
            if (value >= 75)
            {
                badgeClass = 'badge-success'; // Vert (ouverte)
            }
            else if (value >= 30)
            {
                badgeClass = 'badge-warning'; // Orange (partiellement ouverte)
            }

            if (!card)
            {
                card = document.createElement('div');
                card.id = `data-card-${key}`;
                card.className = 'card bg-accent/10 border-l-4 border-accent';
                container.appendChild(card);
            }

            card.innerHTML = `
                <div class="card-body p-4">
                    <h3 class="card-title text-lg">${displayName}</h3>
                    <div class="flex items-center gap-3 mt-2">
                        <div class="radial-progress text-accent" style="--value:${value}; --size:4rem;">
                            <span class="text-lg font-bold">${value}%</span>
                        </div>
                        <div class="flex-1">
                            <div class="badge ${badgeClass} badge-lg w-full">${value}% ouvert</div>
                            ${timestamp ? `<p class="text-xs text-gray-500 mt-2">Mis √† jour: ${timestamp}</p>` : ''}
                        </div>
                    </div>
                </div>
            `;
        }

        // Fonction pour mettre √† jour une valeur
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

    </script>
</body>
</html>
