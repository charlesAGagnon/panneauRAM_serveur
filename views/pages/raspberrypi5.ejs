<!DOCTYPE html>
<html lang="fr" data-theme="light">
<head>
    <%- include('../partials/head') %>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
            <!-- Header Card -->
            <div class="card bg-base-100 shadow-2xl mb-6 border-t-4">
                <div class="card-body">
                    <div class="flex items-center justify-between flex-wrap gap-4">
                        <div>
                            <h1 class="text-4xl font-bold bg-gradient-to-r from-primary to-primary bg-clip-text text-transparent">
                                Raspberry Pi 5 - Valves
                            </h1>
                            <p class="text-gray-600 mt-2">Connecté en tant que <%= user %> (<%= typeAcces %>)</p>
                        </div>
                        <div class="flex items-center gap-3">
                            <div id="connection-status" class="badge badge-lg">Connexion...</div>
                            <div class="badge badge-lg">Niveau <%= niveau %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Display Card -->
            <div class="card bg-base-100 shadow-2xl mb-6">
                <div class="card-body">
                    <h2 class="card-title text-2xl mb-4">
                        Données en temps réel
                        <span class="loading loading-dots loading-sm ml-2"></span>
                    </h2>
                    <div id="mqtt-data-container" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Les données seront insérées ici dynamiquement -->
                    </div>
                </div>
            </div>

            <!-- Description Card -->
            <!-- ...description card removed... -->

            <!-- Navigation Buttons -->
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <div class="card-actions justify-between">
                        <a href="/dashboard?user=<%= user %>&niveau=<%= niveau %>&typeAcces=<%= typeAcces %>" class="btn btn-outline gap-2">Retour au dashboard</a>
                        <a href="/" class="btn btn-outline gap-2">Déconnexion</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const socket = io();

        // Rejoindre la room pi5
        socket.emit('join-pi5');

        // Gestion de la connexion
        socket.on('connect', () =>
        {
            console.log('Connecté au serveur Socket.IO');
            document.getElementById('connection-status').textContent = 'Connecté';
            document.getElementById('connection-status').className = 'badge badge-success badge-lg';
        });

        socket.on('disconnect', () =>
        {
            console.log('Déconnecté du serveur Socket.IO');
            document.getElementById('connection-status').textContent = 'Déconnecté';
            document.getElementById('connection-status').className = 'badge badge-error badge-lg';
        });

        // Recevoir les données initiales
        socket.on('mqtt-initial-data-pi5', (data) =>
        {
            console.log('Données initiales Pi 5:', data);
            updateAllData(data);
        });

        // Recevoir les mises à jour en temps réel
        socket.on('mqtt-data-pi5', (data) =>
        {
            console.log('Mise à jour Pi 5:', data);
            updateValue(data.key, data.value, data.timestamp);
        });

        // Fonction pour mettre à jour toutes les données
        function updateAllData(data)
        {
            const container = document.getElementById('mqtt-data-container');
            container.innerHTML = '';

            for (const [key, value] of Object.entries(data))
            {
                createDataCard(key, value);
            }
        }

        // Fonction pour créer une carte de données
        function createDataCard(key, value, timestamp = null)
        {
            const container = document.getElementById('mqtt-data-container');
            let card = document.getElementById(`data-card-${key}`);

            // Formater le nom d'affichage
            let displayName = key;
            if (key === 'Ouverture_PB') displayName = 'Ouverture PB';
            if (key === 'Ouverture_GB') displayName = 'Ouverture GB';

            // Déterminer la couleur du badge selon le pourcentage
            let badgeClass = 'badge-error'; // Rouge par défaut (fermée)
            if (value >= 75)
            {
                badgeClass = 'badge-success'; // Vert (ouverte)
            }
            else if (value >= 30)
            {
                badgeClass = 'badge-warning'; // Orange (partiellement ouverte)
            }

            if (!card)
            {
                card = document.createElement('div');
                card.id = `data-card-${key}`;
                card.className = 'card bg-accent/10 border-l-4 border-accent';
                container.appendChild(card);
            }

            card.innerHTML = `
                <div class="card-body p-4">
                    <h3 class="card-title text-lg">${displayName}</h3>
                    <div class="flex items-center gap-3 mt-2">
                        <div class="radial-progress text-accent" style="--value:${value}; --size:4rem;">
                            <span class="text-lg font-bold">${value}%</span>
                        </div>
                        <div class="flex-1">
                            <div class="badge ${badgeClass} badge-lg w-full">${value}% ouvert</div>
                            ${timestamp ? `<p class="text-xs text-gray-500 mt-2">Mis à jour: ${timestamp}</p>` : ''}
                        </div>
                    </div>
                </div>
            `;
        }

        // Fonction pour mettre à jour une valeur
        function updateValue(key, value, timestamp)
        {
            createDataCard(key, value, timestamp);
        }

    </script>
</body>
</html>
